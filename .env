# ============================================================================
# MINECRAFT SERVER CONFIGURATION FILE (.env)
# ============================================================================
# This file contains environment variables for the server
# Edit these values to customize your server
# Then restart: ./scripts/restart.sh
# ============================================================================

# ============================================================================
# MEMORY & PERFORMANCE
# ============================================================================

# Server RAM allocation
# Adjust based on players and available system RAM:
# - 2-5 players: 2G
# - 6-15 players: 4G
# - 16+ players: 6G-8G
SERVER_MEMORY=2G

# View distance (in chunks)
# Higher = more CPU/RAM but better visuals
# 10-12 is optimal, max 32
VIEW_DISTANCE=10

# Simulation distance (entity loading)
# Usually same as view distance or slightly less
SIMULATION_DISTANCE=10

# ============================================================================
# SERVER PROPERTIES
# ============================================================================

# Server name (shown in console)
SERVER_NAME="My Minecraft Server"

# Server MOTD (Message of the Day - shown in server list)
# Color codes: §6=gold, §c=red, §b=aqua, §2=dark green
SERVER_MOTD=§6Welcome to PaperMC Server §c- §bPlay Now!

# Game difficulty
# 0 = Peaceful (no mobs), 1 = Easy, 2 = Normal, 3 = Hard
DIFFICULTY=1

# Default game mode for new players
# 0 = Survival, 1 = Creative, 2 = Adventure, 3 = Spectator
GAMEMODE=0

# ============================================================================
# PLAYER & WORLD SETTINGS
# ============================================================================

# Maximum number of concurrent players
# Server will reject connections when full
MAX_PLAYERS=20

# Enable PvP (player vs player combat)
# true = PvP enabled, false = PvP disabled
PVP=true

# Allow flight in survival mode (for creative players)
# true = allow flight, false = no flight
ALLOW_FLIGHT=false

# Spawn protection radius (blocks around spawn point)
# 0 = no protection, higher = larger protected area
SPAWN_PROTECTION=16

# ============================================================================
# WHITELIST SETTINGS
# ============================================================================

# Enable whitelist (only whitelisted players can join)
# true = whitelist enabled, false = anyone can join
WHITELIST_ENABLED=false

# To add players to whitelist, use console:
# ./scripts/console.sh
# Type: whitelist add PlayerName

# ============================================================================
# WORLD SETTINGS
# ============================================================================

# World name
WORLD_NAME=world

# Seed for world generation (leave empty for random)
WORLD_SEED=

# World type: DEFAULT, FLAT, LARGE_BIOMES, AMPLIFIED
WORLD_TYPE=DEFAULT

# ============================================================================
# LOGGING & DEBUG
# ============================================================================

# Logging level: INFO (normal), DEBUG (detailed), WARNING (errors only)
LOG_LEVEL=INFO

# Enable debug logs (shows more detailed information)
DEBUG=false

# ============================================================================
# BACKUP SETTINGS
# ============================================================================

# Enable automatic backups
BACKUP_ENABLED=true

# Backup interval in seconds (3600 = 1 hour)
BACKUP_INTERVAL=3600

# Keep last N backups (0 = keep all)
BACKUP_KEEP=10

# ============================================================================
# ADVANCED SETTINGS
# ============================================================================

# Java options (advanced users only)
# JAVA_OPTS="-XX:+UseG1GC -XX:+ParallelRefProcEnabled"

# Enable RCON (Remote Console)
# Allows remote command execution
ENABLE_RCON=true

# RCON port (must be different from game port)
RCON_PORT=25575

# RCON password (change this!)
RCON_PASSWORD=minecraft

# Enable query protocol (for server listing)
ENABLE_QUERY=false

# ============================================================================
# EXAMPLE CONFIGURATIONS
# ============================================================================
#
# PvP-Focused Server:
# PVP=true
# DIFFICULTY=3
# SPAWN_PROTECTION=0
#
# Peaceful/Creative Server:
# DIFFICULTY=0
# PVP=false
# GAMEMODE=1
# ALLOW_FLIGHT=true
#
# Hardcore Server (small group):
# DIFFICULTY=3
# MAX_PLAYERS=8
# PVP=true
#
# Large Community Server:
# SERVER_MEMORY=8G
# MAX_PLAYERS=50
# WHITELIST_ENABLED=true
#
# ============================================================================